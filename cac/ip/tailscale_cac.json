{
    "selector": "Ip",
    "trigger_type": "User",
    "add_action": {
        "rest": [
            {
                "rest_type": "Post",
                "url": "https://${SECRETS.baseUrl}/api/v2/device/${ENV.user.peerIds.tailscaleId}/authorized",
                "headers": {
                    "Authorization": "Bearer ${SECRETS.accessToken}",
                    "Content-Type": "application/json"
                },
                "body": {
                    "authorized": true
                }
            }
        ]
    },
    "delete_action": {
        "rest": [
            {
                "rest_type": "Post",
                "url": "https://${SECRETS.baseUrl}/api/v2/device/${ENV.user.peerIds.tailscaleId}/authorized",
                "headers": {
                    "Authorization": "Bearer ${SECRETS.accessToken}",
                    "Content-Type": "application/json"
                },
                "body": {
                    "authorized": false
                }
            }
        ]
    }
}